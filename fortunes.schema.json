{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HAP's Learning Fortunes",
  "description": "Fortunes about learning, coding, and growth mindset",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["text", "category"],
    "properties": {
      "text": {
        "type": "string",
        "description": "The fortune message"
      },
      "category": {
        "type": "string",
        "enum": ["coding", "debugging", "mindset", "workflow"],
        "description": "What aspect of learning this fortune relates to"
      },
      "mood": {
        "type": "string",
        "enum": ["encouraging", "serious", "playful"],
        "description": "The emotional tone of the fortune"
      }
    },
    "additionalProperties": false
  },
  "minItems": 1
}
